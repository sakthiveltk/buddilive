<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ca.digitalcave.buddi.web.db.UsersMap">
	<select id="selectUser" resultType="ca.digitalcave.buddi.web.model.User">
		SELECT 
			email,
			credentials,
			donated,
			created,
			modified
		FROM users 
		WHERE email = #{email}
	</select>
</mapper>